{
    "extends": "../tsconfig.json",
    "include": ["src"],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "jsx": "react",
        "resolveJsonModule": true,
        "types": ["jest"],
        "paths": {
            "@app/*": ["src/*"],
            "@app/test-setup": ["./test-setup"],
            "@pyramid-systems/domain": ["../domain"],
            "@pyramid-systems/core": ["../core"]
        }
    }
}
