{
  "name": "{{.projectName}}",
  "version": "0.0.1",
  "description": "Project created by PAC",
  "main": "src/Application.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "dev-server": "webpack-dev-server --color --config webpack.dev.config.js --hot --history-api-fallback",
    "test": "npx jest --colors",
    "test-watch": "npx jest --coverage --watch",
    "test-debug": "npx --node-arg --inspect-brk jest --runInBand",
    "test-sonar": "npx jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "test-ci": "npx jest --ci --reporters=default --reporters=jest-junit"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-react",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-regenerator",
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup/setup.js"
    ],
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "^@app(.*)$": "<rootDir>/src$1",
      "^@pyramidlabs/core(.*)$": "<rootDir>/dist/core$1",
      "^@pyramidlabs/domain(.*)$": "<rootDir>/dist/domain$1",
      "^.+\\.(scss|css|svg|png|sass)$": "identity-obj-proxy"
    }
  },
  "author": "Pyramid Systems, Inc.",
  "license": "ISC",
  "dependencies": {
    "@azure/ms-rest-js": "^1.8.1",
    "@pyramidlabs/react-ui": ">=0.0.45",
    "autoprefixer": "9.4.8",
    "aws-sdk": "2.408.0",
    "buffer": "5.2.1",
    "node-sass": "4.11.0",
    "promise-polyfill": "8.1.0",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-hot-loader": "4.7.1",
    "react-redux": "6.0.1",
    "react-router": "4.3.1",
    "react-router-config": "4.4.0-beta.6",
    "react-router-dom": "4.3.1",
    "redux": "4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.3",
    "@babel/plugin-proposal-class-properties": "7.3.3",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@babel/runtime": "7.3.1",
    "@types/enzyme": "3.1.18",
    "@types/jest": "24.0.6",
    "@types/react": "16.8.4",
    "@types/react-dom": "16.8.2",
    "@types/react-redux": "7.0.1",
    "@types/react-router-config": "1.1.1",
    "@types/react-router-dom": "4.3.1",
    "@types/redux-mock-store": "1.0.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.5",
    "copy-webpack-plugin": "4.6.0",
    "css-hot-loader": "1.4.3",
    "css-loader": "2.1.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.9.1",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "fork-ts-checker-webpack-plugin": "0.5.2",
