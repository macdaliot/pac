{
  "name": "pac-auth-service",
  "version": "0.0.1",
  "description": "authentication service (created by PAC)",
  "main": "server.js",
  "scripts": {
    "build": "npm run generate:templates && npx tsc",
    "start": "npm run build && node dist/services/auth/src/local",
    "start:dev": "npm run start | pino-pretty -c -t -l",
    "generate:routes": "npx tsoa routes -c tsoa.json",
    "generate:swagger": "npx tsoa swagger -c tsoa.json",
    "generate:templates": "npx tsoa routes -c tsoa.json && npx tsoa swagger -c tsoa.json",
    "generate:client": "npx autorest --typescript --input-file=./docs/swagger.json --output-folder=../../app/src/services/auth --add-credentials=true",
    "test": "npx jest --coverage",
    "test-sonar": "npx jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "test-ci": "npx jest --ci --reporters=default --reporters=jest-junit",
    "test-debug": "npx --node-arg --inspect-brk jest --runInBand"
  },
  "author": "Pyramid Systems, Inc.",
  "license": "ISC",
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "autorest": "^2.0.4283",
    "aws-sdk": "^2.437.0",
    "aws-serverless-express": "^3.3.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "express-session": "^1.15.6",
    "inversify": "^5.0.1",
    "module-alias": "^2.2.0",
    "passport": "^0.4.0",
    "passport-auth0": "^1.1.0",
    "passport-jwt": "^4.0.0",
    "passport-saml": "^1.0.0",
    "pino-pretty": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger": "^0.7.5",
    "swagger-ui-express": "^4.0.2",
    "tsoa": "2.4.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/base64-js": "^1.2.5",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^24.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/passport": "^1.0.0",
    "@types/passport-auth0": "^1.0.2",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-saml": "^0.15.9",
    "@types/pino": "^5.8.6",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "jest": "^23.6.0",
    "jest-junit": "^6.2.1",
    "jest-sonar-reporter": "^2.0.0",
    "mocha": "^5.2.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "_moduleAliases": {
    "@pyramid-systems/core": "dist/core",
    "@pyramid-systems/domain": "dist/domain"
  }
}
