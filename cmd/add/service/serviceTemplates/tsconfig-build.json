{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "./",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist/",
    "allowJs": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "@pyramid-systems/core": ["./core"],
      "@pyramid-systems/domain": ["./domain"]
    }
  },
  "include": [
    "src/server.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ]
}
