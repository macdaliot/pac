{
  "name": "pac-{{.serviceName}}-service",
  "version": "0.0.1",
  "description": "{{.serviceName}} service (created by PAC)",
  "main": "server.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon",
    "generate:routes": "npx tsoa routes -c tsoa.json",
    "generate:swagger": "npx tsoa swagger -c tsoa.json",
    "generate:templates": "npx tsoa routes -c tsoa.json && npx tsoa swagger -c tsoa.json",
    "test": "npx jest --coverage",
    "test-sonar": "npx jest --coverage --testResultsProcessor=jest-sonar-reporter",
    "test-ci": "npx jest --ci --reporters=default --reporters=jest-junit"
  },
  "author": "Pyramid Systems, Inc.",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.375.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.12",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/pino": "^5.8.6",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "aws-sdk-mock": "^4.3.0",
    "aws-serverless-express": "^3.3.5",
    "express-pino-logger": "^4.0.0",
    "inversify": "^5.0.1",
    "jest": "^23.6.0",
    "jest-junit": "^6.2.1",
    "jest-sonar-reporter": "^2.0.0",
    "module-alias": "^2.2.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsoa": "^2.3.8",
    "typescript": "^3.2.2"
  },
  "_moduleAliases": {
    "@pyramidlabs/components": "dist/components",
    "@pyramidlabs/core": "dist/core"
  }
}
