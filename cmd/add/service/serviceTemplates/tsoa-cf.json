{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pyramid-systems/domain": ["../../domain"],
      "@pyramid-systems/core": ["../../core"]
    }
  },
  "swagger": {
    "outputDirectory": "./docs",
    "entryFile": "./src/local.ts",
    "basePath": "/api",
    "host": "astrofdic{{.serviceName}}.cfapps.io",
    "version": "1.0",
    "name": "astrofdic{{.serviceName}} Service",
    "description": "A micro service for astrofdic{{.serviceNamePascal}}",
    "license": "ISC",
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "basePath": "/api",
    "entryFile": "./src/local.ts",
    "routesDir": "./src/generated",
    "middleware": "express",
    "middlewareTemplate": "../../core/templates/routes.template.ts"
  },
  "ignore": ["**/node_modules/**"]
}
